{
  "description": "Vanilla Debian Jessie base box",
  "variables": {
      "box_version": "8.4.0",
      "box_changelog": "* new stable point release",
      "atlas_token": "{{env `ATLAS_TOKEN`}}"
    },
  "builders": [
    {
      "boot_command": [
        "<esc><wait>",
        "install <wait>",
        "preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/vanilla-debian-8-jessie-preseed.cfg <wait>",
        "debian-installer=en_US <wait>",
        "auto <wait>",
        "locale=en_US <wait>",
        "kbd-chooser/method=us <wait>",
        "netcfg/get_hostname={{ .Name }} <wait>",
        "netcfg/get_domain=vagrantup.com <wait>",
        "fb=false <wait>",
        "debconf/frontend=noninteractive <wait>",
        "console-setup/ask_detect=false <wait>",
        "console-keymaps-at/keymap=us <wait>",
        "keyboard-configuration/xkb-keymap=us <wait>",
        "<enter><wait>"
      ],
      "disk_size": "10140",
      "headless": true,
      "http_directory": "http",
      "iso_checksum": "7a6b418e6a4ee3ca75dda04d79ed96c9e2c33bb0c703ca7e40c6374ab4590748",
      "iso_checksum_type": "sha256",
      "iso_url": "http://cdimage.debian.org/cdimage/release/8.4.0/amd64/iso-cd/debian-8.4.0-amd64-netinst.iso",
      "shutdown_command": "sudo /sbin/halt -p",
      "ssh_password": "vagrant",
      "ssh_username": "vagrant",
      "ssh_port": "22",
      "ssh_wait_timeout": "10000s",
      "type": "qemu",
      "vm_name": "debian-jessie"
    }
  ],
  "post-processors": [
    [
    {
      "type": "vagrant",
      "output": "jessie64.box",
      "vagrantfile_template": "assets/rsync_for_sharedfolders_Vagrantfile"
    },
    {
      "type": "atlas",
      "artifact": "martin-v/debian-jessie-libvirt",
      "artifact_type": "vagrant.box",
      "metadata": {
        "provider": "libvirt"
      }
    }
    ]
  ],
  "provisioners": [
    {
      "type": "shell",
      "pause_before": "5s",
      "execute_command": "echo 'vagrant'|sudo -S sh '{{.Path}}'",
      "override": {
        "qemu": {
          "scripts": [
            "scripts/base.sh",
            "scripts/vagrant.sh",
            "scripts/cleanup.sh",
            "scripts/minimize.sh"
          ]
        }
      }
    }
  ]
}

