{
  "description": "Testing base box using contrib sources",
  "variables": {
      "box_version": "8.99.0",
      "box_changelog": "* unstable build"
  },
  "builders": [
    {
      "boot_command": [
        "<esc><wait>",
        "install <wait>",
        "preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/vanilla-debian-8-jessie-preseed.cfg <wait>",
        "debian-installer=en_US <wait>",
        "auto <wait>",
        "locale=en_US <wait>",
        "kbd-chooser/method=us <wait>",
        "netcfg/get_hostname={{ .Name }} <wait>",
        "netcfg/get_domain=vagrantup.com <wait>",
        "fb=false <wait>",
        "debconf/frontend=noninteractive <wait>",
        "console-setup/ask_detect=false <wait>",
        "console-keymaps-at/keymap=us <wait>",
        "keyboard-configuration/xkb-keymap=us <wait>",
        "<enter><wait>"
      ],
      "disk_size": "10140",
      "headless": true,
      "http_directory": "http",
      "iso_checksum": "03f7202892ff3ce76ad5703ebfeeabbca2af729ae5401ac17ddebe81f71cb692475454f982eb63e58ab308e45cf9c53293b5048c765b28d1469d4d5ae4dbbc17",
      "iso_checksum_type": "sha512",
      "iso_url": "http://cdimage.debian.org/cdimage/daily-builds/daily/arch-latest/amd64/iso-cd/debian-testing-amd64-netinst.iso",
      "shutdown_command": "sudo /sbin/halt -p",
      "ssh_password": "vagrant",
      "ssh_username": "vagrant",
      "ssh_port": "22",
      "ssh_wait_timeout": "10000s",
      "type": "qemu",
      "vm_name": "debian-testing"
    }
  ],
  "post-processors": [
    [
    {
      "type": "vagrant",
      "output": "testing64.box",
      "vagrantfile_template": "assets/rsync_for_sharedfolders_Vagrantfile"
    }
    ]
  ],
  "provisioners": [
    {
      "type": "shell",
      "pause_before": "5s",
      "execute_command": "echo 'vagrant'|sudo -S sh '{{.Path}}'",
      "override": {
        "qemu": {
          "scripts": [
            "scripts/base.sh",
            "scripts/vagrant.sh",
            "scripts/cleanup.sh",
            "scripts/minimize.sh"
          ]
        }
      }
    }
  ]
}
